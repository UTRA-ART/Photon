<!--simulates the worlds given argument
    default world is drag_race, can modify world_name
    argument to change which world is spawned-->
<launch>
    
    <arg name="use_gui" default="true" />
    <arg name="world" default="drag_race" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
  
        <!-- will run the world with given name --> 
        <arg name="world_name" value="$(find worlds)/$(arg world).world" />
    
        <arg name="debug" value="false" />
        <arg name="gui" value="true" />
        <arg name="paused" value="false" />

    </include>

    <!-- Camera Plug-in -->
    <include file="$(find description)/launch/rgbd_camera.launch">
        <arg name="camera_ns" value="camera/camera_node"/>
    </include>

    <!-- Spawn Robot -->
    <include file="$(find description)/launch/spawn_robot.launch" /> 
</launch>
