<launch>
    <arg name="rqt_steer" default="false"/>
    <arg name="view_rviz" default="false"/>

    <!-- start world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch"/>

    <!-- Load robot description -->
    <param name="robot_description"   
         command="$(find xacro)/xacro '$(find description)/urdf/photon.urdf.xacro'"/>

    <!-- Controller -->
    <include filename="$(find description)/launch/controller.launch"/>
   
    <!-- Launch the robot state publisher -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

    <!-- Launch a rqt steering GUI for publishing to /steer_drive_controller/cmd_vel -->
    <group if="$(arg rqt_steer)">
        <node pkg="rqt_robot_steering" type="rqt_robot_steering" name="rqt_robot_steering">
            <param name="default_topic" value="/ackermann_steering_controller/cmd_vel"/>
        </node>
    </group>

    <!-- Spawn robot in Gazebo -->
    <node name="spawn_vehicle" pkg="gazebo_ros" type="spawn_model"
        args="-urdf -param robot_description -model photon -z 0.5"
        respawn="false" output="screen"/>

    <!-- View in Rviz -->
    <group if="$(arg view_rviz)">
        <node name="rviz" pkg="rviz" type="rviz" args="-d $(find description)/rviz/view_photon.rviz"/>
    </group>
</launch>

